@model MUser

<div class="container w-50">
  <form asp-controller="User" asp-action="Register" method="post" role="form" class="w-50">
    <div class="mb-3">
        <h4>Login</h4>
    </div>
    <div class="mb-3">
        <label asp-for="Username" class="form-label">Username</label>
        <div>
            <input asp-for="Username" type="text" class="form-control" id="username">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="FirstName" class="form-label">First Name</label>
        <div>
            <input asp-for="FirstName" type="text" class="form-control" id="firstname">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="LastName" class="form-label">Last Name</label>
        <div>
            <input asp-for="LastName" type="text" class="form-control" id="LastName">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <div>
            <input asp-for="Email" type="email" class="form-control" id="email" aria-describedby="emailHelp">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="PasswordHash" class="form-label">Password</label>
        <div>
            <input asp-for="PasswordHash" type="password" class="form-control" id="password">
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
        <div>
            <input asp-for="DateOfBirth" type="date" class="form-control" id="dob">
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
  </form>
</div>