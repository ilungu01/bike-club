@using Microsoft.AspNetCore.Mvc.TagHelpers
@model bike_club.ViewModels.UserViewModel

<div class="container w-50">
    <form asp-controller="Login" asp-action="Update"  method="post" role="form">
        <div class="row">
            <div class="col">
                <input asp-for="User.Id" type="hidden" id="User.Id">
                <div class="mb-3">
                    <label asp-for="User.FirstName" class="form-label">First Name</label>
                    <input asp-for="User.FirstName" type="text" class="form-control" id="FirstName" aria-describedby="First name">
                    <span asp-validation-for="User.FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="mb-3">
                    <label asp-for="User.LastName" class="form-label">Last Name</label>
                    <input asp-for="User.LastName" type="text" class="form-control" id="LastName" aria-describedby="Last name">
                    <span asp-validation-for="User.LastName" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class="mb-3">
                    <label asp-for="User.Username" class="form-label"></label>
                    <input asp-for="User.Username" type="text" class="form-control" id="Username" aria-describedby="Username">
                    <span asp-validation-for="User.Username" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="mb-3">
                    <label asp-for="User.Role" class="form-label">Role</label>
                    <input asp-for="User.Role" type="text" class="form-control" id="Role" aria-describedby="Role">
                    <span asp-validation-for="User.Role" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col">
                <div class="mb-3">
                    <label asp-for="User.RoleId" class="form-label"></label>
                    <input asp-for="User.RoleId" type="text" class="form-control" id="RoleId" aria-describedby="RoleId">
                    <span asp-validation-for="User.RoleId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class="mb-3">
                    <label asp-for="User.Email" class="form-label">Email</label>
                    <input asp-for="User.Email" type="email" class="form-control" id="Email" aria-describedby="Email">
                    <span asp-validation-for="User.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="mb-3">
                    <label asp-for="User.PasswordHash" class="form-label">Password</label>
                    <input asp-for="User.PasswordHash" type="password" class="form-control" id="Password" aria-describedby="Password">
                    <span asp-validation-for="User.PasswordHash" class="text-danger"></span>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-warning">Update user details</button>
    </form>
</div>